[Unit]
Description=n8n Monitoring Stack
After=network-online.target n8n-stack.service
Wants=network-online.target
Requires=n8n-stack.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/root/n8n-n150
ExecStart=/usr/bin/podman-compose -f monitoring-compose.yml up -d
ExecStop=/usr/bin/podman-compose -f monitoring-compose.yml down
TimeoutStartSec=300

[Install]
WantedBy=multi-user.target
